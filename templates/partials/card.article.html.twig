{% for message in app.flashes('notice') %}
	<div class="alert alert-success">
		{{ message }}
	</div>
{% endfor %}

<br>
<div class="row justify-content-around mx-0">

	{% for article in articles %}
		<div class="col-sm-12 col-md-6 col-lg-4">
			<div class="card mb-2">
				<h3 class="card-header">{{ article.title }}</h3>
				<img src="{{ article.image }}" class="d-block user-select-none" width="100%" height="35%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice" alt="{{ article.image }}"/>
				<div class="card-body">
					<p class="card-text"></p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">{{ article.intro }}</li>
					<li class="list-group-item">Entreprise de d√©veloppement:
						{{ article.author }}</li>

					<li class="list-group-item">{{article.getDateArticles|format_date('full', locale='fr') }}</li>


					<button type="button" class="btn btn-outline-success">
						<a href="{{ path("detaille", {"id":article.id}) }}">Lire la suite >></a>


					</button>
				</ul>
			</div>
		</div>
	{% endfor %}
</div>
