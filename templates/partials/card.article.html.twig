{% if user.role == "admin" %}
	<div>
		<a href="{{ path("formulaire") }}" class="btn btn-success">Ajouter un article</a>

	</div>

{% endif %}
{% for message in app.flashes('notice') %}
	<div class="alert alert-success">
		{{ message }}
	</div>
{% endfor %}

<br>
<div class="row justify-content-around mx-0">

	{% for article in articles %}
		<div class="col-sm-12 col-md-6 col-lg-4">
			<div class="card mb-2">
				<h3 class="card-header">{{ article.title }}</h3>
				<img src="{{ article.image }}" class="d-block user-select-none" width="100%" height="200px" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice"/>
				<div class="card-body">
					<p class="card-text"></p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">{{ article.intro }}</li>
					<li class="list-group-item">{{ article.author }}</li>
					<li class="list-group-item">{{article.getDateArticles|format_date('full', locale='fr') }}</li>

					<button type="button" class="btn btn-outline-success">
						<a href="{{ path("detaille", {"id":article.id}) }}">Lire la suite >></a>

						{% if user.role == "admin" %}
							<div>
								<a href="{{ path("update", {"id":article.id}) }}" class="btn btn-success">Modifier un article</a>
								<a href="{{ path("delete", {"id":article.id}) }}" class="btn btn-success">Supprimer l'article</a>

							</div>


						{% endif %}
					</button>
				</ul>
			</div>
		</div>
	{% endfor %}
</div>
