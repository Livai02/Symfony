{% extends 'base_dash.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}

	<style>


		body {
			overflow-x: hidden;
			font-size: 16px;
		}

		/* Toggle Styles */

		#viewport {
			padding-left: 250px;
			-webkit-transition: all 0.5s ease;
			-moz-transition: all 0.5s ease;
			-o-transition: all 0.5s ease;
			transition: all 0.5s ease;
		}

		#nav {
			width: 100%;
			position: relative;
			margin-right: 0;
			background: #09414F;
		}

		/* Sidebar Styles */

		#sidebar {
			z-index: 1000;
			position: fixed;
			left: 250px;
			width: 250px;
			height: 100%;
			margin-left: -250px;
			overflow-y: auto;
			background: #09414F;
			-webkit-transition: all 0.5s ease;
			-moz-transition: all 0.5s ease;
			-o-transition: all 0.5s ease;
			transition: all 0.5s ease;
		}

		#sidebar header {
			background-color: #09414F;
			font-size: 20px;
			line-height: 52px;
			text-align: center;
		}

		#sidebar header a {
			color: #fff;
			display: block;
			text-decoration: none;
		}

		#sidebar header a:hover {
			color: #fff;
		}

		#sidebar .nav {}

		#sidebar .nav a {
			background: none;
			color: #CFD8DC;
			font-size: 14px;
			padding: 16px 24px;
		}

		#sidebar .nav a:hover {
			background: none;
			color: #ECEFF1;
		}

		#sidebar .nav a i {
			margin-right: 16px;
		}
	</style>


{% endblock %}
